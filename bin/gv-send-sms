#!/usr/bin/env ruby -W1
# coding: UTF-8
$:.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))
require 'gvoice-ruby'
include GvoiceRuby

voicebox = GvoiceRuby::Client.new

txt = {:phone_number => "3088721257", :text => "Testing sms from gvoice-ruby!", :post_url => "https://www.google.com/voice/sms/send"  }

voicebox.sms(txt)     
                  